extends layout

block content
      header#fh5co-header.fh5co-cover(role='banner', style='background-image:url(images/img_bg_2.jpg);')
        .overlay
        .container
          .row
            .col-md-10.col-md-offset-1.text-center
              .display-t
                .display-tc.animate-box(data-animate-effect='fadeIn')
                  h1 Creating your pretty wallet
                  h2 You will enjoy of usig it
                  .row
                   form#fh5co-header-login(method='post', action='http://localhost:3000/addAcount')
                     .col-md-6.col-md-offset-3
                       .form-group
                          input#login.form-control(type='text', name='account', placeholder='Enter login')
                          input#password.form-control(type='password', name='password', placeholder='Enter password' )
                          button.btn(type='submit')  Get an account
